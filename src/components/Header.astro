---
import { siteConfig } from "../config/site";
---

<header class="border-b border-gray-200 bg-white">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">

    <!-- LOGO -->
    <a href="/" class="flex items-center">
      <img
        src="/images/logo.webp"
        alt="Car Accident Attorney Memphis"
        class="h-14 w-auto"
        loading="eager"
      />
    </a>

    <!-- DESKTOP NAV -->
    <nav class="hidden md:flex items-center gap-6">
      <a href="/about" class="text-sm font-medium hover:underline">
        About Us
      </a>

      <a href="/contact" class="text-sm font-medium hover:underline">
        Contact Us
      </a>

      <a
        href={`tel:${siteConfig.phoneRaw}`}
        class="inline-flex items-center rounded bg-[#CA9A36] px-5 py-2 text-sm font-semibold text-white hover:opacity-90"
      >
        Call Now {siteConfig.phoneFormatted}
      </a>
    </nav>

    <!-- MOBILE HAMBURGER -->
    <button
      id="menu-toggle"
      class="md:hidden flex flex-col items-center justify-center w-12 h-12 rounded bg-[#CA9A36]"
      aria-label="Open Menu"
      type="button"
    >
      <span class="text-white text-2xl leading-none">â˜°</span>
      <span class="text-white text-xs mt-1">Menu</span>
    </button>

  </div>
</header>

<!-- MOBILE MENU -->
<div
  id="mobile-menu"
  class="hidden md:hidden bg-white border-t border-gray-200"
>
  <nav class="flex flex-col px-6 py-4 space-y-4 text-lg font-medium">
    <a href="/about" class="hover:text-blue-600">About Us</a>
    <a href="/contact" class="hover:text-blue-600">Contact Us</a>
  </nav>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleButton = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    if (toggleButton && mobileMenu) {
      toggleButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
